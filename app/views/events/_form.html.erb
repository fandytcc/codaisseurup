<%= form_for @event do |f| %>
  <div class="form-group">
    <label>Event Category</label>
    <%= f.select :categories, Event::EVENT_CATEGORIES, id: "category", prompt: "Select event category", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Event name</label>
    <%= f.text_field :name, placeholder: "Event name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Description</label>
    <%= f.text_area :description, rows: 5, placeholder: "Say something about your event", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Location</label>
    <%= f.text_field :location, placeholder: "Location", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Starts at:</label>
    <%= f.date_select :starts_at, prompt: "Select starting date", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Ends at:</label>
    <%= f.date_select :ends_at, prompt: "Select ending date", class: "form-control" %>
  </div>

  <label>Includes...</label>

  <div class="form-group">
    <%= f.check_box :includes_food %> Food
  </div>
  <div class="form-group">
    <%= f.check_box :includes_drinks %> Drinks
  </div>

  <div class="form-group">
    <label>Price</label>
    <div class="input-group">
      <div class="input-group-addon">€</div>
      <%= f.number_field :price, placeholder: "eg. 100", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label>Capacity</label>
    <div class="input-group">
      <div class="input-group-addon">€</div>
      <%= f.number_field :capacity, placeholder: "eg. 30", class: "form-control" %>
    </div>
  </div>

  <label>Publish this event?</label>

  <div class="form-group">
    <%= f.check_box :active %> Active
  </div>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
