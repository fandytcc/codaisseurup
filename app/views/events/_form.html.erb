<%= form_for @event do |f| %>

  <div class="form-group">
    <label>Event Name</label>
    <%= f.text_field :name, placeholder: "Event name", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Description</label>
    <%= f.text_area :description, rows: 5, placeholder: "Say something about your event", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Location</label>
    <%= f.text_field :location, placeholder: "Location", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>Price</label>
    <div class="input-group">
      <div class="input-group-addon">€</div>
      <%= f.number_field :price, placeholder: "eg. 10.00", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label>Capacity</label>
    <div class="input-group">
      <div class="input-group-addon">€</div>
      <%= f.number_field :capacity, placeholder: "eg. 100", class: "form-control" %>
    </div>
  </div>

  <div class="form-group">
    <label>Start Date:</label>
    <%= f.date_select :starts_at, prompt: "Select start date", class: "form-control" %>
  </div>

  <div class="form-group">
    <label>End Date:</label>
    <%= f.date_select :ends_at, prompt: "Select end date", class: "form-control" %>
  </div>

  <hr/>
  <label>Amenities</label>

  <div class="form-group">
    <label>Food included: </label>
    <%= f.radio_button :includes_food, "0" %>
    <label for="includes_food_true"> YES </label>
    <%= f.radio_button :includes_food, "1" %>
    <label for="includes_food_false"> NO </label>
  </div>

  <div class="form-group">
    <label>Drinks included: </label>
    <%= f.radio_button :includes_drinks, "0" %>
    <label for="includes_drinks_true"> YES </label>
    <%= f.radio_button :includes_drinks, "1" %>
    <label for="includes_drinks_false"> NO </label>
  </div>
  <hr/>

  <label>Status</label>

  <div class="form-group">
    <%= f.check_box :active %> Active
  </div>
  <hr/>

  <div class="form-group">
    <label>Categories</label>

    <%= f.collection_check_boxes(:category_ids, Category.all, :id, :name) do |b| %>
      <div class="form-group">
        <%= b.check_box(class: "check_box") %> <%= b.object.name %>
      </div>
    <% end %>
  <hr/>

  <div class="actions">
    <%= f.submit "Save", class: "btn btn-primary" %>
  </div>
<% end %>
