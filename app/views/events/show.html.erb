<div class="panel panel-primary">
  <div class="panel-heading">
    <%= @event.name %>
    <p><%= @event.description %></p>
  </div>

  <div class="panel-body">
    <!-- Main info -->
    <p>Location: <%= @event.location %></p>
    <p>Host: <%= @event.user.email %></p>
    <p>Starts at: <%= @event.starts_at.to_formatted_s(:rfc822) %> </p>
    <p>Ends at: <%= @event.ends_at.to_formatted_s(:rfc822) %></p>
    <br/>

    <p>Price: <%= @event.price %> $ </p>
    <p>Capacity: <%= @event.capacity %> <%= @event.capacity > 1 ? "Guests" : "Guest" %></p>
    <br/>

    <!-- Includes.. -->
    <h4>Amenities</h4>
    <ul class="includes">
      <li><%= !@event.includes_food ? ("<s>Food</s>").html_safe : "Food" %></li>
      <li><%= !@event.includes_drinks ? ("<del>Drinks</del>").html_safe : "Drinks" %></li>
    </ul>
    <br/>
    <p>Status: <%= @event.active %></p>

    <!-- Categories -->
    <h4>Categories</h4>
    <% @categories.each do |category| %>
    <span class="label label-success"> <%= category.name %></p>
    <% end %>
  </div>

</div>

<%= link_to "BACK", events_path, class: "btn btn-default" %>
